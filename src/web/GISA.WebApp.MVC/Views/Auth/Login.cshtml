@model GISA.WebApp.MVC.Models.UsuarioLogin

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-4 text-center login-center m-0">
        <main class="form-signin">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                <vc:Summary></vc:Summary>

                @*<img class="mb-4" src="~/img/bootstrap-logo.svg" alt="" width="72" height="57">*@
                <h1 style="font-size: 45px;padding-bottom: 30px;color: #2c3748;">Boa Saúde</h1>
                @*<h1 class="h3 mb-3 fw-normal">Bem-vindo!</h1>*@

                <div class="form-floating">
                    <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">E-mail</label>
                </div>
                <div class="form-floating">
                    <input asp-for="Senha" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Senha</label>
                </div>

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <button asp-action="Login" asp-controller="Auth" class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
                <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
            </form>
        </main>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
