@{
    ViewData["Title"] = "Clientes";
    Layout = "_LayoutPrivate";
}

<!-- Título Page -->
<div class="header title-page" id="header-management">
    <h3 class="text-title-page">Gestão de Pessoas</h3>
</div>

<!-- Informações sobre ações da página -->
<div class="row pt-75">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-breadcrumb">
                <li class="breadcrumb-item"><a chref="#">Início</a></li>
                <li class="breadcrumb-item active" aria-current="page"> / Pessoas</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row pt-40">
    <div class="col-md-12">
        <div class="card card-config">
            <div class="card-body">
                <span class="d-flex justify-content-start"><i class='bx bx-info-circle nav_icon'></i> Aqui você pode incluir novos clientes ou voltar a página inicial</span>
                <div class="d-flex justify-content-end">
                    <a class="btn btn-primary" asp-action="Registrar">Novo Cliente</a>
                    <button type="button" class="btn btn-light ml-10">Voltar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<h3 class="text-title-info pt-40">Clientes cadastrados</h3>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <!-- Componente - DataTable -->
        <div id="listaPessoa"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // Obter todas pessoas
            function ObterTodasPessoas() {
                $.ajax({
                    url: '/pessoa/obter-todos',
                    type: 'GET',
                    success: function (result) {
                        var listaPessoas = [];

                        result.forEach(function (item, index, arr) {
                            var status = (item.ativo == true)
                                ? "<td><span class='badge bg-success'>Ativo</span></td>"
                                : "<td><span class='badge bg-danger'>Inativo</span></td>"

                            var tipoPessoa = item.tipoPessoaEnum == 0 ? "Associado" : "Colaborador";

                            var obj = {
                                id: item.id,
                                nome: item.nomeCompleto,
                                cidade: item.enderecoViewModel.municipio,
                                endereco: item.enderecoViewModel.logradouro,
                                telefone: item.telefone,
                                tipoPessoa: tipoPessoa,
                                status: status,
                                acao: '<a data-bs-toggle="tooltip" data-bs-placement="top" title="Editar" onclick="EditarPessoa(\'' + item.id + '\');"><i class="bx bxs-edit"></i></a>'
                            }

                            listaPessoas.push(obj);
                        });

                        CarregarTabelaPessoa(listaPessoas);
                    },
                    error: function (err) {
                        console.log('error', err)
                    }
                });
            }

            function CarregarTabelaPessoa(data) {
                console.log('>> Listando data', data)

                $('#example').DataTable({
                    processing: true,
                    data: data,
                    columns: [
                        { data: "nome" },
                        { data: "cidade" },
                        { data: "endereco" },
                        { data: "telefone" },
                        { data: "tipoPessoa" },
                        { data: "status" },
                        { data: "acao" }
                    ],
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.10.20/i18n/Portuguese-Brasil.json',
                        processing: '<i class="fa fa-spinner fa-spin" style="font-size:24px;color:rgb(75, 183, 245);"></i>'
                    }
                });
            }

            // Inicializando criação data table pessoa
            var pessoa = {}
            pessoa.template = {
                tabela: `<table id="example" class="table table-striped table-bordered" style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th>Nome</th>
                                            <th>Cidade</th>
                                            <th>Endereço</th>
                                            <th>Telefone</th>
                                            <th>Tipo</th>
                                            <th>Status</th>
                                            <th>Acao</th>
                                        </tr>
                                    </thead>
                                </table>`
            }

            $('#listaPessoa').html('');
            $('#listaPessoa').append(pessoa.template.tabela);

            ObterTodasPessoas();

            $('#example > tbody > tr > td:nth-child(6)').css({ "text-align": "center" });
            $('#example > tbody > tr > td:nth-child(7)').css({ "text-align": "center" });
        });
    </script>
}
