@model GISA.WebApp.MVC.Models.PessoaViewModel

<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
        <h4 class="text-title-info">Gestão de Plano Pessoa</h4>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">

        <div id="msg_box_offcanvas"></div>

        <input asp-for="PlanoClienteViewModel.Id" type="hidden">
        <input asp-for="PlanoClienteViewModel.PlanoId" type="hidden">

        <div class="row">
            <div class="mb-3 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <label asp-for="TipoPessoaEnum" class="form-label"></label>
                <select asp-for="TipoPessoaEnum" class="form-select" disabled readonly>
                    <option selected disabled value="">-selecine um tipo pessoa-</option>
                    <option value="0">Associado</option>
                    <option value="1">Colaborador</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <label asp-for="NomeCompleto" class="form-label"></label>
                <input asp-for="NomeCompleto" class="form-control" disabled readonly>
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <label>Tipo do Plano</label>
                @*<select asp-for="PlanoClienteViewModel.PlanoId" asp-items="@ViewBag.TipoPlano" class="form-select">
                        <option selected disabled>-Selecine um plano-</option>
                    </select>*@
                <select id="ddlPlano" class="form-select">
                    <option selected disabled>-Selecine um plano-</option>
                </select>
            </div>
        </div>

        <div class="row">
            <label class="form-label">Valor</label>
            <div class="input-group mb-3 col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <span class="input-group-text">R$</span>
                <input id="txtValorPlano" type="text" class="form-control" readonly disabled>
            </div>
        </div>

        <div class="row">
            <label asp-for="PlanoClienteViewModel.Desconto" class="form-label"></label>
            <div class="input-group mb-3 col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <span class="input-group-text">(%)</span>
                <input id="txtDesconto" asp-for="PlanoClienteViewModel.Desconto" class="form-control" placeholder="10.00%" onkeypress="return app.metodos.onlynumber();">
            </div>
            <label asp-for="PlanoClienteViewModel.ValorFinal" class="form-label"></label>
            <div class="input-group mb-3 col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <span class="input-group-text">R$</span>
                <input id="txtValorFinal" asp-for="PlanoClienteViewModel.ValorFinal" class="form-control" readonly disabled>
            </div>
        </div>

        <div class="mb-3 col-sm-12 col-md-12 col-lg-12">
            <br />
            <button id="btnPlanoPessoaVoltar" type="button" class="btn btn-secondary float-end ml-10" data-bs-dismiss="offcanvas" aria-label="Close">Voltar</button>
            <button type="submit" class="btn btn-primary float-end">Salvar</button>
        </div>
    </div>
</div>