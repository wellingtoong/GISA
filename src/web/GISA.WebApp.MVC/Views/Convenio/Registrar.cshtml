@model GISA.WebApp.MVC.Models.ConvenioViewModel

@{
    ViewData["Title"] = "Registrar";
    Layout = "_LayoutPrivate";
}

<!-- Título Page -->
<div class="header title-page" id="header-management">
    <h3 class="text-title-page">Registro de Convênios</h3>
</div>

<!-- Informações sobre ações da página -->
<div class="row pt-75">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Ínicio</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Convênio</a></li>
                <li class="breadcrumb-item active" aria-current="page">/ Registro</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="pt-40 col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form class="row g-3 needs-validation" novalidate asp-action="Registrar" method="post">
                <vc:Summary></vc:Summary>

                <partial name="_Convenio" />

                <h4 class="text-title-info">Endereço</h4>
                <hr />
                <partial name="_Endereco" />

                <div class="row">
                    <div class="mb-3 col-sm-12 col-md-12 col-lg-12">
                        <br />
                        <a class="btn btn-secondary float-end ml-10" asp-action="Index">Voltar</a>
                        <button type="submit" class="btn btn-primary float-end">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        var convenio = {}

        convenio.eventos = {

            init: () => {

                $('#Telefone').mask('(00) 0000-0000');
                $('#Cnpj').mask('00.000.000/0000-00', { reverse: true });
                $('#EnderecoViewModel_Cep').mask('00000-000');

                var validade = "@ViewBag.ValidateForm";
                app.metodos.initValidateForm(validade);
            }

        }

        convenio.eventos.init();
        app.metodos.buscarCep();
    </script>
}