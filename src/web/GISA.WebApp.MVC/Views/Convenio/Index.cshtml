@model GISA.WebApp.MVC.Models.ConvenioViewModel
@{
    ViewData["Title"] = "Convênio";
    Layout = "_LayoutPrivate";
}

<!-- Título Page -->
<div class="header title-page" id="header-management">
    <h3 class="text-title-page">Gestão de Convênios</h3>
</div>

<!-- Informações sobre ações da página -->
<div class="row pt-75">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-breadcrumb">
                <li class="breadcrumb-item"><a chref="#">Início</a></li>
                <li class="breadcrumb-item active" aria-current="page"> / Convênio</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row pt-40">
    <div class="col-md-12">
        <div class="card card-config">
            <div class="card-body">
                <span class="d-flex justify-content-start"><i class='bx bx-info-circle nav_icon'></i> Aqui você pode incluir novos convênios ou voltar a página inicial</span>
                <div class="d-flex justify-content-end">
                    <a class="btn btn-primary" asp-action="Registrar">Novo Convênio</a>
                    <button type="button" class="btn btn-light ml-10">Voltar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<h3 class="text-title-info pt-40">Convênios cadastrados</h3>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <!-- Componente - DataTable -->
        <div id="listaConvenio"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Obter todos convenios
            function ObterTodosConvenios() {
                $.ajax({
                    url: '/convenio/obter-todos',
                    type: 'GET',
                    success: function (result) {
                        var listaConvenios = [];

                        result.forEach(function (item, index, arr) {
                            var status = (item.ativo == true)
                                ? "<td><div style='text-align: center;'><span class='badge bg-success'>Ativo</span></div></td>"
                                : "<td><div style='text-align: center;'><span class='badge bg-danger'>Inativo</span></div></td>"

                            var obj = {
                                id: item.id,
                                nome: item.nomeFantasia,
                                cidade: item.enderecoViewModel.municipio,
                                endereco: item.enderecoViewModel.logradouro,
                                telefone: item.telefone,
                                status: status,
                                acao: '<td><div style="text-align: center;cursor: pointer;"><a data-bs-toggle="tooltip" data-bs-placement="top" title="Editar" onclick="EditarConvenio(\'' + item.id + '\');"><i class="bx bxs-edit"></i></a></div></td>'
                            }

                            listaConvenios.push(obj);
                        });

                        CarregarTabelaConvenio(listaConvenios);
                    },
                    error: function (err) {
                        console.log('error', err)
                    }
                });
            }

            function CarregarTabelaConvenio(data) {
                console.log('>> Listando data', data)

                $('#example').DataTable({
                    processing: true,
                    data: data,
                    columns: [
                        { data: "nome" },
                        { data: "cidade" },
                        { data: "endereco" },
                        { data: "telefone" },
                        { data: "status" },
                        { data: "acao" }
                    ],
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.10.20/i18n/Portuguese-Brasil.json',
                        processing: '<i class="fa fa-spinner fa-spin" style="font-size:24px;color:rgb(75, 183, 245);"></i>'
                    }
                });
            }

            // Inicializando criação data table convenio
            var convenio = {}
            convenio.template = {
                tabela: `<table id="example" class="table table-striped table-bordered" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Cidade</th>
                                    <th>Endereço</th>
                                    <th>Telefone.</th>
                                    <th>Status</th>
                                    <th>Acao</th>
                                </tr>
                            </thead>
                        </table>`
            }

            $('#listaConvenio').html('');
            $('#listaConvenio').append(convenio.template.tabela);

            ObterTodosConvenios();
        });
    </script>
}
