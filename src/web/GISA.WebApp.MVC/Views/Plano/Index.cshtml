@{
    ViewData["Title"] = "Planos";
    Layout = "_LayoutPrivate";
}

<!-- Título Page -->
<div class="header title-page" id="header-management">
    <h3 class="text-title-page">Gestão de Planos</h3>
</div>

<!-- Informações sobre ações da página -->
<div class="row pt-75">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-breadcrumb">
                <li class="breadcrumb-item"><a chref="#">Início</a></li>
                <li class="breadcrumb-item active" aria-current="page"> / Planos</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row pt-40">
    <div class="col-md-12">
        <div class="card card-config">
            <div class="card-body">
                <span class="d-flex justify-content-start"><i class='bx bx-info-circle nav_icon'></i> Aqui você pode incluir novos planos ou voltar a página inicial</span>
                <div class="d-flex justify-content-end">
                    <a class="btn btn-primary" asp-action="Registrar">Novo Plano</a>
                    <button type="button" class="btn btn-light ml-10">Voltar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<h3 class="text-title-info pt-40">Planos cadastrados</h3>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <!-- Componente - DataTable -->
        <div id="listaPlano"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            //Obter todos planos
            function ObterTodosPlanos() {
                $.ajax({
                    url: '/plano/obter-todos',
                    type: 'GET',
                    success: function (result) {
                        var listaPlanos = [];

                        result.forEach(function (item, index, arr) {
                            var status = (item.ativo == true)
                                ? "<td><div style='text-align: center;'><span class='badge bg-success'>Ativo</span></div></td>"
                                : "<td><div style='text-align: center;'><span class='badge bg-danger'>Inativo</span></div></td>"

                            var plano = null;

                            if (item.tipoPlanoEnum == 0) plano = "Enfermaria";
                            else if (item.tipoPlanoEnum == 1) plano = "Apartamento";
                            else if (item.tipoPlanoEnum == 2) plano = "VIP";

                            var obj = {
                                id: item.id,
                                nome: item.nome,
                                descricao: item.descricao,
                                tipoPlano: plano,
                                valor: item.valor.toLocaleString('pt-br', { minimumFractionDigits: 2 }),
                                status: status,
                                acao: '<td><div style="text-align: center;cursor: pointer;"><a data-bs-toggle="tooltip" data-bs-placement="top" title="Editar" onclick="EditarPlano(\'' + item.id + '\');"><i class="bx bxs-edit"></i></a></div></td>'
                            }

                            listaPlanos.push(obj);
                        });

                        CarregarTabelaPlano(listaPlanos);
                    },
                    error: function (err) {
                        console.log('error', err)
                    }
                });
            }

            function CarregarTabelaPlano(data) {
                console.log('>> Listando data', data)

                $('#example').DataTable({
                    processing: true,
                    data: data,
                    columns: [
                        { data: "nome" },
                        { data: "descricao" },
                        { data: "tipoPlano" },
                        { data: "valor" },
                        { data: "status" },
                        { data: "acao" }
                    ],
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.10.20/i18n/Portuguese-Brasil.json',
                        processing: '<i class="fa fa-spinner fa-spin" style="font-size:24px;color:rgb(75, 183, 245);"></i>'
                    }
                });
            }

            // Inicializando criação data table pessoa
            var plano = {}
            plano.template = {
                tabela: `<table id="example" class="table table-striped table-bordered" style="width:100%;">
                                                    <thead>
                                                        <tr>
                                                            <th>Nome</th>
                                                            <th>Plano</th>
                                                            <th>Descrição</th>
                                                            <th>Valor</th>
                                                            <th>Status</th>
                                                            <th>Acao</th>
                                                        </tr>
                                                    </thead>
                                                </table>`
            }

            $('#listaPlano').html('');
            $('#listaPlano').append(plano.template.tabela);

            ObterTodosPlanos();
        });
    </script>
}
